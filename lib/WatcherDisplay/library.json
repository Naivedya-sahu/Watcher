{
  "name": "WatcherDisplay",
  "version": "1.1.0",
  "description": "High-level display wrapper for Waveshare 4.2\" V2 E-Paper with automatic ghosting fix, custom TTF/OTF font support via integrated font generator, and advanced graphics API. Convert any font to bitmap for e-paper displays.",
  "keywords": [
    "display",
    "e-paper",
    "epd",
    "waveshare",
    "graphics",
    "ui",
    "esp32",
    "fonts",
    "custom-fonts",
    "ttf",
    "otf",
    "bitmap-fonts",
    "font-generator"
  ],
  "authors": [
    {
      "name": "The Watcher Project",
      "maintainer": true
    }
  ],
  "repository": {
    "type": "git",
    "url": ""
  },
  "license": "MIT",
  "frameworks": "arduino",
  "platforms": "espressif32",
  "dependencies": [
    {
      "name": "waveshare-epd",
      "version": "*"
    }
  ],
  "export": {
    "include": [
      "src/*",
      "examples/*",
      "*.md"
    ],
    "exclude": [
      "tools/*.pyc",
      "fonts/input/*",
      "fonts/output/*"
    ]
  },
  "build": {
    "srcFilter": [
      "+<src/>",
      "+<src/*.cpp>",
      "+<src/*.h>"
    ],
    "flags": "-std=c++11"
  }
}
